            </xs:documentation>
        </xs:annotation>
        <xs:complexContent>
            <xs:extension base="permissionMapperType">
                <xs:sequence>
                    <xs:element name="permission" maxOccurs="unbounded">
                        <xs:complexType>
                            <xs:attribute name="class-name" type="xs:string" use="required">

<subsystem xmlns="urn:wildfly:elytron:1.0">
    <provider-loaders>
        <provider-loader name="custom-loader" />
    </provider-loaders>
    <tls>
        <keystores>
            <keystore name="PKCS_11" type="PKCS#11" provider="SunPKCS#11" password="password" />
            <keystore name="jks_store" type="jks" password="password" alias-filter="one,two,three">
                <file relative-to="jboss.server.config.dir" path="keystore.jks" required="true" />
            </keystore>
            <keystore name="jceks_store" type="jceks" password="password">
                <file relative-to="jboss.server.config.dir" path="keystore.jceks" />
            </keystore>
            <keystore name="Custom_PKCS_11" type="PKCS#11" provider="SunPKCS#11" provider-loader="custom-loader" password="password" />
        </keystores>
        <key-managers>
            <key-manager name="serverKey" algorithm="SunX509" keystore="jks_store" password="password" />
        </key-managers>
        <trust-managers>
            <trust-manager name="serverTrust" algorithm="SunX509" keystore="jks_store" />
        </trust-managers>
        <server-ssl-contexts>
            <server-ssl-context name="server" protocols="TLSv1_2" want-client-auth="true" need-client-auth="true" authentication-optional="true" maximum-session-cache-size="10" 
                session-timeout="120" key-managers="serverKey" trust-managers="serverTrust" />
        </server-ssl-contexts>
    </tls>
</subsystem>